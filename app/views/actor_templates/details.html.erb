<h1>Actor #<%= @the_actor.id %> details </h1>
<a href="/actors">Go back</a>

<hr>

<dl>
  <dt>Name</dt>
  <dd><%= @the_actor.name %> </dd>
  <dt>Dob</dt>
  <dd><%= @the_actor.dob %> </dd>
  <dt>Bio</dt>
  <dd><%= @the_actor.bio %> </dd>
    <dt>Image</dt>
  <dd><img src= "<%= @the_actor.image %>" width="200" > </dd>
      <dt>Created at</dt>
  <dd><%= @the_actor.created_at %> </dd>
        <dt>Updated at</dt>
  <dd><%= @the_actor.updated_at %> </dd>
</dl>

<hr>
<h1>Filmography </h1>

<table border="1">
<tr>

<th>Title</th>
<th>Year</th>
<th>Director</th>
<th>Character Name</th>
<th></th>
</tr>

<% matching_movies = Characters.where({ :actor_id => @the_actor.id}) %>
<% matching_movies.each do |a_movie| %>

<tr>
<td><%=a_movie.title%></td>
<td><%=a_movie.year%></td>
<td><%=a_movie.director_id%> </td>
<td><%=a_movie.character_name%> </td>
<td>
  <a href="/actors/<%= a_actor.id %>"> Show Details
</td>
</tr>

<% end %>
</table>
